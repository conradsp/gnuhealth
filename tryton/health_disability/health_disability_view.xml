<?xml version="1.0"?>
<tryton>
    <data>
        
        <!-- Patient Disability -->

        <record model="ir.ui.view" id="gnuhealth_patient_disability_view">
            <field name="model">gnuhealth.patient_disability</field>
            <field name="type">form</field>
            <field name="name">gnuhealth_patient_disability_form</field>
        </record>

        <record model="ir.ui.view" id="gnuhealth_patient_disability_tree">
            <field name="model">gnuhealth.patient_disability</field>
            <field name="type">tree</field>
            <field name="name">gnuhealth_patient_disability_tree</field>
        </record>

        <!-- Shortcut to Disability assessment / history from the Patient -->

        <record model="ir.action.act_window" id="act_patient_disability_form">
            <field name="name">Disability Information</field>
            <field name="res_model">gnuhealth.patient_disability</field>
            <field name="domain" eval="[('patient', '=', Eval('active_id'))]" pyson="1"/>
        </record>

        <record model="ir.action.keyword" id="act_open_patient_disability_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">gnuhealth.patient,-1</field>
            <field name="action" ref="act_patient_disability_form"/>
        </record>

    </data>
</tryton>
