<?xml version="1.0"?>
<form string="Death Certificate">
    <group colspan="4" string="Main" id="group_death_cert_header">
        <label name="name"/>
        <field name="name"/>
        <label name="code"/>
        <field name="code"/>
        <label name="dod"/>
        <field name="dod"/>
        <label name="tod"/>
        <field name="tod"/>
        <label name="cod"/>
        <field name="cod"/>
        <label name="type_of_death"/>
        <field name="type_of_death"/>
        <label name="institution"/>
        <field name="institution"/>
    </group>
    <newline/>
    <separator colspan="4" string="Observations" id="separator_death_cert_observations"/>
    <newline/>
    <field name="observations" colspan="4"/>
    <newline/>
    <group id="death_certificate_footer" colspan="4" col="6">
        <label name="state"/>
        <field name="state"/>
        <label name="signed_by"/>
        <field name="signed_by"/>
        <button name="sign" help="Sign the certificate" string="Sign" icon="tryton-go-next" confirm="Sign Death Certificate ?"/>
    </group>
</form>
